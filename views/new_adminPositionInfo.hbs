<div class="row m-5">
  <div class="col-8 m-auto">
    <div class="card card-body">
      <h1 class="text-center mt-3">新增職缺類別</h1>
      <form action="/adminPositionInfo" method="POST">
        <div class="modal-body">
          {{> message}}
          <div class="input-group">
            <div class="input-group-prepend">
              <span class="input-group-text new-title">產業類別</span>
            </div>
            <select name="industry_no" id="industry_no" class="form-control new-des" required>
              <option value="" selected hidden>請選擇</option>
              {{#each industryInfo}}
              <option value="{{this.INDUSTRY_ID}}" {{#is this.INDUSTRY_NAME 'Admin'}} hidden {{/is}}
              {{#is this.INDUSTRY_ID ../industry_no}} selected {{/is}}>
              {{this.INDUSTRY_NAME}}
              </option>
              {{/each}}
            </select>
          </div>

          <div class="input-group pt-3">
            <div class="input-group-prepend">
              <span class="input-group-text new-title">職缺名稱</span>
            </div>
            <input type="text" class="form-control new-des" name="position_name" placeholder="請輸入職缺名稱" value="{{position_name}}" required>
          </div>

          <div class="input-group pt-3">
            <div class="input-group-prepend">
              <span class="input-group-text new-title">職缺英文名稱</span>
            </div>
            <input type="text" class="form-control new-des" name="position_entity_name" placeholder="請輸入職缺英文名稱" value="{{position_entity_name}}" required>
          </div>

        </div>
        <div class="modal-footer">
          <a href="/adminPositionInfo" class="btn btn-outline-info">取消</a>
          <button type="submit" class="btn btn-primary confirm-btn" id="confirm-create">新增</button>
        </div>
      </form>
    </div>
  </div>
</div>