<div class="row m-5">
  <div class="col-8 m-auto">
    <div class="card card-body">
      <h1 class="text-center mt-3">編輯公司</h1>
      {{> message}}
      <form action="/adminCompany/{{adminCompanyInfo.CPY_ID}}?_method=PUT" method="POST">
        <div class="modal-body">

          <div class="form-group">
            <label for="cpy_no">公司代碼</label>
            <input type="text" id="cpy_no" name="cpy_no" class="form-control" placeholder="請輸入公司統編" value="{{ adminCompanyInfo.CPY_ID }}" required>
          </div>

          <div class="form-group">
            <label for="cpy_name">公司名稱</label>
            <input type="text" id="cpy_name" name="cpy_name" class="form-control" placeholder="請輸入公司名稱" value="{{ adminCompanyInfo.CPY_NAME }}" required>
          </div>

          <div class="form-group">
            <label for="email">Email</label>
            <input type="email" id="email" name="email" class="form-control" placeholder="請輸入信箱"
              value="{{ adminCompanyInfo.EMAIL }}" required>
          </div>

          <div class="form-group">
            <label for="industry_no">產業類別</label>
            <select name="industry_no" id="industry_no" class="form-control" required>
              <option value="" selected hidden>請選擇</option>
              {{#each industryInfo}}
              <option value="{{this.INDUSTRY_ID}}" {{#is this.INDUSTRY_ID ../adminCompanyInfo.INDUSTRY_NO}} selected {{/is}}>
              {{this.INDUSTRY_NAME}}
              </option>
              {{/each}}
            </select>
          </div>

          <div class="form-group">
            <label for="ishr">客服使用者</label>
            <select name="ishr" id="ishr" class="form-control" required>
              <option value="" selected hidden>請選擇</option>
              <option value="1" {{#is adminCompanyInfo.ISHR '1'}} selected {{/is}}>是</option>
              <option value="0" {{#is adminCompanyInfo.ISHR '0'}} selected {{/is}}>否</option>
            </select>
          </div>

          <div class="form-group">
            <label for="isadmin">權限</label>
            <select name="isadmin" id="isadmin" class="form-control" required>
              <option value="" selected hidden>請選擇</option>
              <option value="1" {{#is adminCompanyInfo.ISADMIN '1'}} selected {{/is}}>管理員</option>
              <option value="0" {{#is adminCompanyInfo.ISADMIN '0'}} selected {{/is}}>一般使用者</option>
            </select>
          </div>

        </div>
        <div class="modal-footer">
          <a href="/adminCompany" class="btn btn-outline-info">取消</a>
          <button type="submit" class="btn btn-primary confirm-btn" id="confirm-create">儲存</button>
        </div>
      </form>
    </div>
  </div>
</div>