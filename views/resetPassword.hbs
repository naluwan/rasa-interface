<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mt-3">重設密碼</h1>
      {{> message}}
      <form action="/users/resetPassword/{{email}}?_method=PUT" method="POST">

        <div class="form-group">
          <label for="password">密碼：</label>
          <input type="password" id="password" name="password" class="form-control" placeholder="請輸入密碼" required>
        </div>

        <div class="form-group">
          <label for="confirmPassword">確認密碼：</label>
          <input type="password" id="confirmPassword" name="confirmPassword" class="form-control"
            placeholder="請再次輸入密碼" required>
        </div>
        <button type="submit" class="btn btn-primary btn-block">送出</button>
      </form>
    </div>
  </div>
</div>