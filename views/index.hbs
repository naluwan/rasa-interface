{{#if isAdmin}}
  {{#is whichRole 'hire'}}
  <div class="row">
    <div class="col-10 mx-auto mt-3" id="message-block">
    {{> message}}
    </div>
    <div class="col-10 mx-auto mt-3">
      <form action="/roleFilter?_method=PUT" method="POST">
        <select name="roleFilter" id="roleFilter" onchange="submit()">
          <option value="hire" {{#is whichRole 'hire'}} selected {{/is}}>徵厲Hire</option>
          <option value="hr" {{#is whichRole 'hr'}} selected {{/is}}>棉花糖客服</option>
        </select>
      </form>
    </div>
    {{!-- <a href="#" class="btn btn-dark active mx-3" role="button" id="train-btn">Train</a> --}}
    <button class="btn btn-dark active mx-3" type="button" id="train-btn">Train</button>
    <div class="col-12 mx-auto home">
      <div class="row col-6 d-flex mx-auto justify-content-center">
        {{!-- <button class=" btn btn-dark mx-2" style="font-size:medium; height:fit-content"
          id="train-btn" data-toggle="modal" data-target="#trainModal">
          訓練
        </button> --}}
        <div class="col-12 d-flex align-items-center justify-content-center">
          <label class="m-5 label-title">公司帳號資料:</label>
          <a href="/adminCompany" class="btn btn-success active col-3" role="button">設定</a>
        </div>
      </div> 

      <div class="row col-6 d-flex mx-auto justify-content-center">
        <div class="col-12 d-flex align-items-center justify-content-center">
          <label class="m-5 label-title">公司資訊類別:</label>
          <a href="/adminCompanyInfo" class="btn btn-success active col-3" role="button">設定</a>
        </div>
      </div> 

      <div class="row col-6 d-flex mx-auto justify-content-center">
        <div class="col-12 d-flex align-items-center justify-content-center" id="position-block">
          <label class="m-5 label-title">公司職缺類別:</label>
          <div class="position-detail-block">
