<div class="row m-5">
  <div class="col-8 m-auto">
    <div class="card card-body">
      <h1 class="text-center mt-3">編輯職缺資訊</h1>
      {{> message}}
      <form action="/position/{{result.POSITION_NO}}?_method=PUT" method="POST">
        <div class="modal-body">

          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <label class="input-group-text new-title" for="category">職缺名稱</label>
            </div>
            <select class="custom-select new-title" id="category" name="category" required>
              <option value="" hidden>請選擇</option>
              <option value="{{result.POSITION_NO}}" selected disabled>{{result.POSITION_NAME}}</option>
            </select>
          </div>

          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text new-title">職缺內容</span>
            </div>
            <textarea type="text" class="form-control new-des" name="POSITION_DES" placeholder="請輸入職位需求、工作內容、薪資" aria-label="inputDes"
              aria-describedby="des" rows="10" required>{{ result.POSITION_DES }}</textarea>
          </div>

        </div>
        <div class="modal-footer">
          <a href="/position" class="btn btn-outline-info">取消</a>
          <button type="submit" class="btn btn-primary confirm-btn" id="confirm-create">儲存</button>
        </div>
      </form>
    </div>
  </div>
</div>