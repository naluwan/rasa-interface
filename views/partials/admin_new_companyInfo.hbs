{{#if admin_new_companyInfo}}
<!-- admin_new_companyInfo -->
<div class="admin_new_companyInfo">
  <h1>新增資訊類別</h1>
  <form action="/admin_companyInfo" Method="POST">
    <div>
      {{> message}}
      <div>
        <label>資訊名稱</label>
        <input type="text" class="form-control" name="cnName" placeholder="請輸入資訊名稱" value="{{info_name}}" required>
      </div>

      <div>
        <label>資訊英文名稱</label>
        <input type="text" class="form-control" name="entity_name" placeholder="請輸入資訊英文名稱" value="{{entity_name}}" required>
      </div>
    </div>
    <div class="formButton">
      <input type="button" id="cancel" class="btn btn-primary" onclick="Method.common.page('/admin_companyInfo')" value="取消">
      <input type="submit" id="add" class="btn btn-info confirm-btn" value="新增">
    </div>
  </form>
</div>
{{/if}}