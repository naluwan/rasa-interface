<!--admin_leaveInfo-->
{{#if admin_leaveInfo}}
<div class="admin_leaveInfo">
  <h1>假別類別</h1>
  <form action="/admin_leaveInfo" class="searchBar">
    <input type="text" name="search" id="search" value="{{search}}" placeholder="搜尋關鍵字">
    <button type="submit" class=" btn btn-info">查詢</button>
  </form> 
  {{> message}}
  <div id="data-panel">
    {{#each adminLeaveInfo}}
    <div>
      <span>
        <div>
          <span>假別名稱：</span>
          <span title="{{this.LEAVE_NAME}}">{{this.LEAVE_NAME}}</span>
        </div>
        <div>
          <span>英文名稱：</span>
          <span title="{{this.ENTITY_NAME}}">{{this.ENTITY_NAME}}</span>
        </div>
      </span>
      <span>
        <button class=" btn btn-danger" id="admin-delete-user-btn" data-toggle="modal" data-target="#deleteModal" data-id="{{ this.LEAVE_ID }}" data-name="{{ this.LEAVE_NAME }}" data-category="admin_leaveInfo">
            刪除
        </button>
      </span>
    </div>
    {{/each}}
  </div>
  <div class="text-center footButton">
    <a href="javascript:;" class="btn btn-warning" onclick="page('/admin_leaveInfo/new')">新增資訊</a>
  </div>
</div>
  

<!-- Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalScrollableTitle"
  aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalScrollableTitle">刪除資訊</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>確定要刪除<strong id="delete-position">{{ this.LEAVE_NAME }}</strong>?</p> 
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">取消</button>
        <form action="/admin_leaveInfo/{{ this.LEAVE_ID }}" method="post" style="display:inline-block;" id="delete-form">
          <button type="submit" class="btn btn-danger">確定</button>
        </form>
      </div>
    </div>
  </div>
</div>
{{/if}}