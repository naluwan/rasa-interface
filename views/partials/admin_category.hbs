{{#if admin_category}}
<!--admin_category-->
<div class="admin_category">
  <style id="searchCss"></style>
  <h1>{{#is category 'cpnyinfo'}}資訊{{/is}}{{#is category 'position'}}職缺{{/is}}{{#is category 'leave'}}假別{{/is}}{{#is category 'subsidy'}}補助{{/is}}類別</h1>
  <div class="searchBar">
    <input type="text" name="search" id="search" value="{{search}}" placeholder="搜尋關鍵字">
  </div> 
  {{> message}}
  <div id="data-panel">
    {{#each adminCategoryInfo}}
    <div data-search="{{this.cnName}} {{this.entity_name}}">
      <span>
        <div>
          <span>資訊名稱：</span>
          <span title="{{this.cnName}}">{{this.cnName}}</span>
        </div>

        <div>
          <span>英文名稱：</span>
          <span title="{{this.entity_name}}">{{this.entity_name}}</span>
        </div>    
      </span>
      
      <span>
      {{#is ../category 'cpnyinfo'}}<input type="button" id="edit" class="btn btn-primary" onclick="Method.common.page('/admin_companyInfo/{{ this.entity_name }}/edit')" value="編輯">{{/is}}
      {{#is ../category 'position'}}<input type="button" id="edit" class="btn btn-primary" onclick="Method.common.page('/admin_positionInfo/{{ this.entity_name }}/edit')" value="編輯">{{/is}}
      {{#is ../category 'leave'}}<input type="button" id="edit" class="btn btn-primary" onclick="Method.common.page('/admin_leaveInfo/{{ this.entity_name }}/edit')" value="編輯">{{/is}}
      {{#is ../category 'subsidy'}}<input type="button" id="edit" class="btn btn-primary" onclick="Method.common.page('/admin_subsidyInfo/{{ this.entity_name }}/edit')" value="編輯">{{/is}}
        <input type="button" id="del" class="btn btn-danger" value="刪除" data-title="{{this.cnName}}" data-infoId="{{this.id}}">
      </span>
    </div>
    {{/each}}
  </div>
  <div class="footButton">
      {{#is category 'cpnyinfo'}}<input type="button" class="btn btn-warning" onclick="Method.common.page('/admin_companyInfo/new')" value="新增資訊">{{/is}}
      {{#is category 'position'}}<input type="button" class="btn btn-warning" onclick="Method.common.page('/admin_positionInfo/new')" value="新增資訊">{{/is}}
      {{#is category 'leave'}}<input type="button" class="btn btn-warning" onclick="Method.common.page('/admin_leaveInfo/new')" value="新增資訊">{{/is}}
      {{#is category 'subsidy'}}<input type="button" class="btn btn-warning" onclick="Method.common.page('/admin_subsidyInfo/new')" value="新增資訊">{{/is}}
    
  </div>
</div>
{{/if}}