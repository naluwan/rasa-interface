{{#if jh_new_subsidy}}
<!-- jh_new_subsidy -->
<div class="jh_new_subsidy">
  <h1>新增補助津貼資訊</h1>
  <form action="/jh_subsidy" method="POST">
    {{> message}}

    <div>
      <label>補助名稱</label>
      <input type="text" class="form-control" name="cnName" id="cnName" placeholder="請輸入津貼名稱" value="{{name}}" required>
    </div>

    <div>
      <label for="entity_name">英文名稱</label>
      <input type="text" class="form-control" name="entity_name" id="entity_name" placeholder="請輸入補助津貼英文名稱" value="{{entity_name}}" required>
    </div>

    <div>
      <label for="des">補助內容</label>
      <textarea class="form-control" name="des" id="des" placeholder="請輸入補助津貼內容" rows="5" required>{{des}}</textarea>
    </div>

    <div class="text-center mt-3">
      <a id="cancel" href="javascript:;" class="btn btn-primary" onclick="page('/jh_subsidy')">取消</a>
      <input id="add" type="submit" class="btn btn-info" value="新增">
    </div>
  </form>
</div>

{{/if}}