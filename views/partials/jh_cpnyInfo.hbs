<!-- jh_cpnyInfo -->
{{#if jh_cpnyInfo}}
<div class="jh_cpnyInfo">
  <h1>公司資訊</h1>
  {{> message}}
  <div id="data-panel">
    {{#each cpnyInfo}}
    <div>
      <span>
        <div>
          <span>資訊名稱：</span>
          <span title="{{this.CPNYINFO_NAME}}">{{this.CPNYINFO_NAME}}</span>
        </div>
        <div>
          <span>英文名稱：</span>
          <span title="{{this.ENTITY_NAME}}">{{this.ENTITY_NAME}}</span>
        </div>
        <div>
          <span>資訊內容：</span>
          <span>{{this.CPNYINFO_DES}}</span>
        </div>
      </span>
      <span>
        <a href="/jh_cpnyInfo/{{ this.ENTITY_NAME }}/edit" class="btn btn-primary">編輯</a>
        <button class=" btn btn-danger" id="delete-btn" data-toggle="modal" data-target="#deleteModal" data-name="{{ this.CPNYINFO_NAME }}" data-entity="{{ this.ENTITY_NAME }}" data-category="jh_cpnyInfo">刪除</button>
      </span>
    </div>
    {{/each}}
  </div>
  <div class="text-center footButton">
    <a href="/jh_cpnyInfo/new" class="btn btn-warning" id="create-btn">新增資訊</a>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalScrollableTitle"
  aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalScrollableTitle">刪除資訊</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>確定要刪除<strong id="delete-position">{{ this.POSITION_NAME }}</strong>?</p> 
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">取消</button>
        <form action="/jh_cpnyInfo/{{ this.POSITION_ID }}" method="post" style="display:inline-block;" id="delete-form">
          <button type="submit" class="btn btn-danger">確定</button>
        </form>
      </div>
    </div>
  </div>
</div>
{{/if}}