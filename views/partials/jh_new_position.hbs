{{#if jh_new_position}}
<!-- jh_new_position -->
<div class="jh_new_position">
  <h1>新增職缺</h1>
  <form action="/jh_position" Method="POST">
    <div>
      {{> message}}
      <div>
        <label for="name">職缺名稱</label>
        <input type="text" class="form-control" name="cnName" placeholder="請輸入職缺名稱" value="{{name}}" required>
      </div>

      <div>
        <label for="entity_name">英文名稱</label>
        <input type="text" class="form-control" name="entity_name" placeholder="請輸入職缺英文名稱" value="{{entity_name}}" required>
      </div>

      <div>
        <label for="des">職缺內容</label>
        <textarea class="form-control" name="des" placeholder="請輸入職缺內容" rows="5" required>{{des}}</textarea>
      </div>

    </div>
    <div class="formButton">
      <input id="cancel" class="btn btn-primary" onclick="Method.common.page('/jh_position')" value="取消">
      <input id="add" type="submit" class="btn btn-info" value="新增">
    </div>
  </form>
</div>
{{/if}}