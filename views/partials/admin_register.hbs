    </div>
-->

    {{#if isAdmin}}
    <div>
      <label for="ishr">客服使用者</label>
      <select name="ishr" id="ishr" class="form-control" required>
        <option value="" selected hidden>請選擇</option>
        <option value="1" {{#is ishr '1'}} selected {{/is}}>是</option>
        <option value="0" {{#is ishr '0'}} selected {{/is}}>否</option>
      </select>
    </div>

    <div>
      <label for="ishr">權限</label>
      <select name="isadmin" id="isadmin" class="form-control" required>
        <option value="" selected hidden>請選擇</option>
        <option value="1" {{#is isadmin '1'}} selected {{/is}}>管理員</option>
        <option value="0" {{#is isadmin '0'}} selected {{/is}}>一般使用者</option>
      </select>
    </div>
    {{/if}}

    <div>
      <label>輸入密碼</label>
      <input type="password" id="password" name="password" class="form-control" placeholder="請輸入密碼" value="{{ password }}" required>
    </div>

    <div>
      <label>確認密碼</label>
      <input type="password" id="confirmPassword" name="confirmPassword" class="form-control" placeholder="請再次輸入密碼" value="{{ confirmPassword }}" required>
    </div>

    <div class="text-center mt-3">
      <a href="javascript:;" class="btn btn-primary" role="button" onclick="page('/admin_company')">返回</a>
      <button type="submit" class="btn btn-info">註冊</button><br>
    </div>
  </form>
  {{#unless isAdmin}}
  
  {{/unless}}
</div>
{{/if}}