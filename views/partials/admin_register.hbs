<!-- admin_register -->
{{#if admin_register}}
<div class="admin_register">
  <h1>註冊帳號</h1>
  {{> message}}
  <form {{#if isAdmin}}action="/admin_company/new"{{else}}action="/users/register"{{/if}} method="post">
    <div>
      <label for="cpy_no">公司統編</label>
      <input type="text" id="cpy_no" name="cpy_no" class="form-control" placeholder="請輸入公司統編" value="{{ cpy_no }}" required>
    </div>

    <div>
      <label for="cpy_name">公司名稱</label>
      <input type="text" id="cpy_name" name="cpy_name" class="form-control" placeholder="請輸入公司名稱" value="{{ cpy_name }}" required>
    </div>

    <div>
      <label for="email">信箱</label>
      <input type="email" id="email" name="email" class="form-control" placeholder="請輸入信箱" value="{{ email }}" required>
    </div>

