{{#if jh_position}}
<!-- jh_position -->
<div class="jh_position">
  <h1>職缺資訊</h1>
  {{> message}}
  <div id="data-panel">
    {{#each positionInfo}}
    <div>
      <span>
        <div>
          <span>職缺名稱：</span>
          <span data-title title="{{this.POSITION_NAME}}">{{this.POSITION_NAME}}</span>
        </div>
        <div>
          <span>英文名稱：</span>
          <span title="{{this.ENTITY_NAME}}">{{this.ENTITY_NAME}}</span>
        </div>
        <div>
          <span>職缺內容：</span>
          <span title="{{ this.POSITION_DES }}">{{ this.POSITION_DES }}</span>
        </div>
      </span>
      <span>
        <input type="button" class="btn btn-primary" onclick="page('/jh_position/{{ this.ENTITY_NAME}}/edit')" value="編輯">
        <input type="button" class="btn btn-danger" data-infoId="{{this.infoId}}" value="刪除">
      </span>
    </div>
    {{/each}}
  </div>
  <div class="footButton">
    <input type="button" class="btn btn-warning" onclick="page('/jh_position/new')" value="新增職缺">
  </div>
</div>
{{/if}}