{{#if jh_subsidy}}
<!-- jh_subsidy -->
<diV class="jh_subsidy">
  <h1>補助津貼</h1>
  {{> message}}
  <div id="data-panel">  
    {{#each subsidyInfo}}
    <div>
      <span>
        <div>
          <span>補助名稱：</span>
          <span title="{{this.SUBSIDY_NAME}}">{{this.SUBSIDY_NAME}}</span>
        </div>
        <div>
          <span>英文名稱：</span>
          <span title="{{this.ENTITY_NAME}}">{{this.ENTITY_NAME}}</span>
        </div>
        <div>
          <span>補助內容：</span>
          <span title="{{ this.SUBSIDY_DES }}">{{ this.SUBSIDY_DES }}</span>
        </div>
      </span>
      <span>
        <input type="button" class="btn btn-primary" onclick="page('/jh_subsidy/{{ this.ENTITY_NAME}}/edit')" value="編輯">
        <input type="button" id="del" class="btn btn-danger" data-title="{{this.SUBSIDY_NAME}}" data-infoId="{{this.infoId}}" value="刪除">
    </div>
    {{/each}}
  </div>
  <div class="footButton">
    <input type="button" class="btn btn-warning" onclick="Method.common.page('/jh_subsidy/new')" value="新增補助津貼">
  </div>
</div>
{{/if}}