{{#if jh_edit_leave}}
<!-- jh_edit_leave -->
<div class="card card-body">
  <h1 class="text-center">編輯假別資訊</h1>
  <form action="/leave/{{leaveInfo.entity_name}}?_method=PUT" method="POST">
    <div class="modal-body">
      {{> message}}

      <div class="input-group">
        <div class="input-group-prepend">
          <label for="name" class="input-group-text new-title">假別名稱</label>
        </div>
        <input type="text" class="form-control new-des" name="name" id="name" placeholder="請輸入假別名稱" value="{{leaveInfo.name}}" disabled>
      </div>

      <div class="input-group">
        <div class="input-group-prepend">
          <label for="name" class="input-group-text new-title">英文名稱</label>
        </div>
        <input type="text" class="form-control new-des" name="entity_name" id="entity_name" placeholder="請輸入英文名稱" value="{{leaveInfo.entity_name}}" disabled>
      </div>

      <div class="input-group">
        <div class="input-group-prepend">
          <label for="position_des" class="input-group-text new-title">假別內容</label>
        </div>
        <textarea class="form-control new-des" name="des" id="des" placeholder="請輸入假別內容" rows="5" required>{{leaveInfo.des}}</textarea>
      </div>

    </div>
    <div class="text-center">
      <a href="/leave" class="btn btn-outline-info">取消</a>
      <button type="submit" class="btn btn-primary confirm-btn" id="confirm-create">儲存</button>
    </div>
  </form>
</div>
{{/if}}