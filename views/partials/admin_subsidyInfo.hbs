{{#if admin_subsidyInfo}}
<!--admin_subsidyInfo-->
<div class="admin_subsidyInfo">
  <style id="searchCss"></style>
  <h1>補助類別</h1>
  <div class="searchBar">
    <input type="text" name="search" id="search" value="{{search}}" placeholder="搜尋關鍵字">
  </div> 

  {{> message}}
  <div id="data-panel">
    {{#each adminSubsidyInfo}}
    <div data-search="{{this.SUBSIDY_NAME}} {{this.ENTITY_NAME}}">
      <span>
        <div>
          <span>補助名稱：</span>
          <span title="{{this.SUBSIDY_NAME}}">{{this.SUBSIDY_NAME}}</span>
        </div>
        <div>
          <span>英文名稱：</span>
          <span title="{{this.ENTITY_NAME}}">{{this.ENTITY_NAME}}</span>
        </div>
      </span>
      <span>
        <input type="button" id="edit" class="btn btn-primary" onclick="Method.common.page('/admin_subsidyInfo/{{ this.ENTITY_NAME }}/edit')" value="編輯">
        <input type="button" id="del" class="btn btn-danger" value="刪除" data-title="{{this.SUBSIDY_NAME}}" data-infoId="{{this.SUBSIDY_ID}}">
      </span>
    </div>
    {{/each}}
  </div>

  <div class="footButton">
    <input type="button" class="btn btn-warning" onclick="Method.common.page('/admin_subsidyInfo/new')" value="新增資訊">
  </div>
</div>

{{/if}}