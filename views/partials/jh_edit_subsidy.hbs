{{#if jh_edit_subsidy}}
<!-- jh_edit_subsidy -->
<div>
  <h1>編輯補助津貼</h1>
  <form action="/jh_subsidy/{{subsidyInfo.entity_name}}?_method=PUT" method="POST">
    <div>
      {{> message}}
      <div>
        <label for="name">補助名稱</label>
        <input type="text" class="form-control" name="name" id="name" placeholder="請輸入補助津貼名稱" value="{{subsidyInfo.name}}" disabled>
      </div>
      <div>
        <label for="name">補助英文名稱</label>
        </div>
        <input type="text" class="form-control" name="entity_name" id="entity_name" placeholder="請輸入英文名稱" value="{{subsidyInfo.entity_name}}" disabled>
      </div>
      <div>
        <label for="position_des">補助內容</label>
        <textarea class="form-control" name="des" id="des" placeholder="請輸入補助津貼內容" rows="5" required>{{subsidyInfo.des}}</textarea>
      </div>
    </div>
    <div class="text-center mt-3">
      <a href="javascript:;" class="btn btn-primary" onclick="page('/jh_subsidy')">取消</a>
      <button type="submit" class="btn btn-info">儲存</button>
    </div>
  </form>
</div>
{{/if}}