<!--admin_companyInfo-->
{{#if admin_companyInfo}}
<div class="admin_companyInfo">
  <h1>資訊類別</h1>
  <form action="/admin_companyInfo" class="searchBar">
    <input type="text" name="search" id="search" value="{{search}}" placeholder="搜尋關鍵字">
    <button type="submit" class=" btn btn-info">查詢</button>
  </form> 
  <div>
    {{> message}}
    <div>
      <div id="data-panel">
        {{#each adminCompanyInfo}}
        <div>
            <span>
              <div>
                <span>資訊名稱：</span>
                <span title="{{this.CPNYINFO_NAME}}">{{this.CPNYINFO_NAME}}</span>
              </div>

              <div>
                <span>英文名稱：</span>
                <span title="{{this.ENTITY_NAME}}">{{this.ENTITY_NAME}}</span>
              </div>
              
            </span>
            <span>
              <button class=" btn btn-danger" id="admin-delete-user-btn" data-toggle="modal" data-target="#deleteModal" data-id="{{ this.CPNYINFO_ID }}" data-name="{{ this.CPNYINFO_NAME }}" data-category="admin_companyInfo">刪除</button>
            </span>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
  <div class="text-center footButton">
    <a href="javascript:;" class="btn btn-warning" onclick="page('/admin_companyInfo/new')">新增資訊</a>
  </div>
    
</div>

<!-- Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalScrollableTitle"
  aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalScrollableTitle">刪除資訊</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>確定要刪除<strong id="delete-position">{{ this.CPNYINFO_NAME }}</strong>?</p> 
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">取消</button>
        <form action="/admin_companyInfo/{{ this.CPNYINFO_ID }}" method="post" style="display:inline-block;" id="delete-form">
          <button type="submit" class="btn btn-danger">確定</button>
        </form>
      </div>
    </div>
  </div>
</div>
{{/if}}