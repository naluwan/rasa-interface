{{#if admin_companyInfo}}
<!--admin_companyInfo-->
<div class="admin_companyInfo">
  <style id="searchCss"></style>
  <h1>資訊類別</h1>
  <div class="searchBar">
    <input type="text" name="search" id="search" value="{{search}}" placeholder="搜尋關鍵字">
  </div> 
  <div>
    {{> message}}
    <div>
      <div id="data-panel">
        {{#each adminCompanyInfo}}
        <div data-search="{{this.CPNYINFO_NAME}} {{this.ENTITY_NAME}}">
            <span>
              <div>
                <span>資訊名稱：</span>
                <span title="{{this.CPNYINFO_NAME}}">{{this.CPNYINFO_NAME}}</span>
              </div>

              <div>
                <span>英文名稱：</span>
                <span title="{{this.ENTITY_NAME}}">{{this.ENTITY_NAME}}</span>
              </div>
              
            </span>
            <span>
              <input type="button" id="edit" class="btn btn-primary" onclick="Method.common.page('/admin_companyInfo/{{ this.ENTITY_NAME }}/edit')" value="編輯">
              <input type="button" id="del" class="btn btn-danger" value="刪除" data-title="{{this.CPNYINFO_NAME}}" data-infoId="{{this.CPNYINFO_ID}}">
            </span>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
  <div class="footButton">
    <input type="button" class="btn btn-warning" onclick="Method.common.page('/admin_companyInfo/new')" value="新增資訊">
  </div>
    
</div>
{{/if}}