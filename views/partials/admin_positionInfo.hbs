{{#if admin_positionInfo}}
<!--adminPositionInfo-->
<div class="adminPositionInfo">
  <style id="searchCss"></style>
  <h1>職缺類別</h1>
  <div class="searchBar">
    <input type="text" name="search" id="search" value="{{search}}" placeholder="搜尋關鍵字">
  </div> 
  <div>
    {{> message}}
    <div>
        <div id="data-panel">
          
          {{#each adminPositionInfo}}
          <div data-search="{{this.POSITION_NAME}} {{this.ENTITY_NAME}}">
            <span>
              <!--
              <div>
                <span>產業類別：</span>
                <span title="{{this.INDUSTRY_NAME}}">{{this.INDUSTRY_NAME}}</span>
              </div>
              <div>
                -->
              <div>
                <span>職缺名稱：</span>
                <span title="{{this.POSITION_NAME}}">{{this.POSITION_NAME}}</span>
              </div>
              <div>
                <span>英文名稱：</span>
                <span title="{{this.ENTITY_NAME}}">{{this.ENTITY_NAME}}</span>
              </div>
            </span>

            <span>
              <!--
              {{#unless this.TRAINED}}
              <form action="/adminPositionInfo/trained/{{this.POSITION_ID}}?_Method=PUT" Method="POST">
                <button class="btn btn-warning mx-2" style="font-size:medium; height:fit-content">
                  訓練完成
                </button>
              </form>
              {{/unless}}
              -->
              <input type="button" id="edit" class="btn btn-primary" onclick="Method.common.page('/admin_positionInfo/{{ this.ENTITY_NAME }}/edit')" value="編輯">
              <input type="button" id="del" class="btn btn-danger" value="刪除" data-title="{{this.POSITION_NAME}}" data-infoId="{{this.POSITION_ID}}">
            </span>
          </div>
          {{/each}}

    </div>
  </div>
  <div class="footButton">
    <input type="button" class="btn btn-warning" onclick="Method.common.page('/admin_positionInfo/new')" value="新增資訊">
  </div>
</div>

{{/if}}