<div class="row m-5">
  <div class="col-8 m-auto">
    <div class="card card-body">
      <h1 class="text-center mt-3">編輯資訊</h1>
      {{> message}}
      <form action="/adminSearch/{{cpy_no}}/{{table}}/{{adminSearch_no}}?_method=PUT" method="POST">
        <div class="modal-body">

          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <label class="input-group-text new-title" for="category">名稱</label>
            </div>
            <select class="custom-select new-title" id="category" name="category" required>
              <option value="" hidden>請選擇</option>
              <option value="{{adminSearchInfo.adminSearch_no}}" selected disabled>{{adminSearchInfo.adminSearch_name}}</option>
            </select>
          </div>

          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text new-title">內容</span>
            </div>
            <textarea type="text" class="form-control new-des" name="adminSearch_des" placeholder="請輸入職位需求、工作內容、薪資" aria-label="inputDes"
              aria-describedby="des" rows="10" required>{{ adminSearchInfo.adminSearch_des }}</textarea>
          </div>

        </div>
        <div class="modal-footer">
          <a href="/adminSearch/filter?companyFilter={{cpy_no}}&tableFilter={{table}}&search=" class="btn btn-outline-info">取消</a>
          <button type="submit" class="btn btn-primary confirm-btn" id="confirm-create">儲存</button>
        </div>
      </form>
    </div>
  </div>
</div>