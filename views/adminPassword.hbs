<div class="row m-5">
  <div class="col-8 m-auto">
    <div class="card card-body">
      <h1 class="text-center mt-3">修改{{adminCompanyInfo.CPY_NAME}}密碼</h1>
      {{> message}}
      <form action="/adminCompany/password/{{adminCompanyInfo.CPY_ID}}?_method=PUT" method="POST">
        <div class="modal-body">

          <div class="form-group">
          <label for="password">Password</label>
          <input type="password" id="password" name="password" class="form-control" placeholder="請輸入密碼"
            required>
        </div>

        <div class="form-group">
          <label for="confirmPassword">Confirm Password</label>
          <input type="password" id="confirmPassword" name="confirmPassword" class="form-control"
            placeholder="請再次輸入密碼" required>
        </div>

        </div>
        <div class="modal-footer">
          <a href="/adminCompany" class="btn btn-outline-info">取消</a>
          <button type="submit" class="btn btn-primary confirm-btn" id="confirm-create">儲存</button>
        </div>
      </form>
    </div>
  </div>
</div>